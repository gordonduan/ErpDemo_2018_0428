

<div id="editModal" tabindex="-1" class="modal fade in" aria-hidden="true">
    <div class="modal-dialog">
        <div class="box box-info">
            <div class="box-header with-border">
                <h5 class="box-title" id="Title"></h5>
                <button class="close" aria-label="Close" type="button" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form class="form-horizontal">
                <input type="hidden" id="Id" />
                <input type="hidden" id="Code" />
                <input type="hidden" id="BirthDate" />
                <input type="hidden" id="Address" />
                <input type="hidden" id="City" />
                <input type="hidden" id="Region" />
                <input type="hidden" id="PostalCode" />
                <input type="hidden" id="Country" />
                <input type="hidden" id="Extension" />
                <input type="hidden" id="Photo" />
                <input type="hidden" id="Notes" />
                <input type="hidden" id="ReportsTo" />
                <input type="hidden" id="PhotoPath" />
                <input type="hidden" id="IsValid" />
                <input type="hidden" id="CreatedTime" />
                <input type="hidden" id="ModifiedTime" />
                @*<input type='number' value='' oninput='if(value.length>11)value=value.slice(0,11)' />*@
                <div class="box-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="">FirstName</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="FirstName" type="text" placeholder="First Name" maxlength="10">
                        </div>
                        <label class="col-sm-2 control-label" for="">Last Name</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="LastName" type="text" placeholder="Last Name" maxlength="20">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="">Department</label>
                        <div class="col-sm-4">
                            <select class="form-control" id="DepartmentId">
                                <option value=""></option>
                            </select>
                        </div>
                        <label class="col-sm-2 control-label" for="">Role</label>
                        <div class="col-sm-4">
                            <select class="form-control" id="RoleId">
                                <option value=""></option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="">Title</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="TitleId" type="text" placeholder="Title" maxlength="30">
                        </div>
                        <label class="col-sm-2 control-label" for="">Phone</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="Phone" type="text" placeholder="Phone" maxlength="24">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="">Hire Date</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="HireDate" type="text" placeholder="Hire Date" maxlength="24">
                        </div>
                        <label class="col-sm-2 control-label" for="">Employee ID</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="EmployeeId" type="text" placeholder="Employee ID" maxlength="50">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="">Description</label>
                        <div class="col-sm-10">
                            <textarea id="Description" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="pull-right box-tools">
                            <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                            <button class="btn btn-default" type="button" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@*@model ErpDemo.Domain.Entities.Suppliers*@

<div id="editModal" tabindex="-1" class="modal fade in" aria-hidden="true">
    <div class="modal-dialog">
        <div class="box box-info">
            <div class="box-header with-border">
                <h5 class="box-title" id="Title"></h5>
                <button class="close" aria-label="Close" type="button" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form class="form-horizontal">
                <input type="hidden" id="Id" />
                <input type="hidden" id="Code" />
                <input type="hidden" id="SupplierId" />
                <input type="hidden" id="ContactTitle" />
                <input type="hidden" id="IsValid" />
                <input type="hidden" id="CreatedTime" />
                <input type="hidden" id="ModifiedTime" />
                @*<input type='number' value='' oninput='if(value.length>11)value=value.slice(0,11)' />*@
                <div class="box-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="">Name</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="Name" type="text" placeholder="Supplier Name" maxlength="40">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="">Contact</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="ContactName" type="text" placeholder="Contact Name" maxlength="30">
                        </div>
                        <label class="col-sm-2 control-label" for="">Address</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="Address" type="text" placeholder="Address" maxlength="60">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="">Phone</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="ContactNumber" type="text" placeholder="Phone Number" maxlength="24">
                        </div>
                        <label class="col-sm-2 control-label" for="">City</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="City" type="text" placeholder="City" maxlength="15">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="">Fax</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="Fax" type="text" placeholder="Fax" maxlength="24">
                        </div>
                        <label class="col-sm-2 control-label" for="">Region</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="Region" type="text" placeholder="Region" maxlength="15">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="">Postal</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="PostalCode" type="text" placeholder="PostalCode" maxlength="10">
                        </div>
                        <label class="col-sm-2 control-label" for="">Country</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="Country" type="text" placeholder="Country" maxlength="15">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="">HomePage</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="HomePage" type="text" placeholder="HomePage">
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="pull-right box-tools">
                        <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                        <button class="btn btn-default" type="button" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
